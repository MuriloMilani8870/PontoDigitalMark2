@model PontoDigitalMark2.ViewModels.HistoricoViewModel
@{
    ViewData["Title"] = "Contratos - Ponto Digital";
    ViewData["H2"] = "Histórico de Contratos";
}
<header>
    @{
        Html.RenderPartial("_HeaderNavBar");
    }
    <hgroup>
        <h1>Ponto Digital</h1>
    </hgroup>
</header>

<main>
    <h2>@ViewData["H2"]</h2>
    <h3>Seu histórico:</h3>
    <table>
        <thead>
            <tr>
                <th>Data</th>
                <th>Planos</th>
                <th>Preço</th>
            </tr>
        </thead>
        <tbody>
            @foreach( var contrato in Model.Contratos ) {
                <tr>
                    <td>@contrato.DataPedido</td>
                    <td>@contrato.Plano.Nome</td>
                    <td>@contrato.Preco</td>
                </tr>
            }
        </tbody>
    </table>

</main>