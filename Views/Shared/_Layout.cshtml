@{
    var user = (string) ViewData["UserN"];
    var admin = (string) ViewData["UserA"];
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>PONTO DIGITAL - @ViewData["Title"].ToString().ToUpper()</title>
    <link rel="stylesheet" href="css/Style.css">
    
</head>

<body>
    <header>
        <div id="div_menu">
            <span class="botao_menu"><img src="IMG/Logo.png" alt="Icone Menu"></span>
            <nav id="menu" class="menu">
                <ul class="ul_menu">
                    <li><a href='@Url.Action("Index", "Home")'>Principal</a></li> 
                    <li><a href='@Url.Action("Index", "Home")#planos'>Produtos</a></li>
                    <li><a href='@Url.Action("Index", "Home")#historia'>História</a></li>
                    <li><a href='@Url.Action("Index", "Home")#contato'>Contatos</a></li>
                    <li><a href='@Url.Action("Index", "Comentarios")'>Depoimentos</a></li> 
                    @if (string.IsNullOrEmpty(user))
                    {
                        <li><a href='@Url.Action("Index", "Cadastro")' >Login/Cadastro</a></li>
                    }else
                    {
                        <li><a href='@Url.Action("Logout", "Login")' >Logout</a></li>
                    }
                    @if (!string.IsNullOrEmpty(admin))
                    {
                        @if (admin.Equals("True"))
                        {
                            <li><a href='@Url.Action("Index", "Admin")'>Home Admin</a></li>
                            
                        }
                    }
                        
    
                </ul>
            </nav>
        </div>
    </header>

    @RenderBody()


    
    <footer>
        <div id="footer">
            <div id="contatos">
                <p>Todos os direitos do Ponto Digital são reservados a empresa "Agora Vai"</p>
                <br>
                <p>Telefone: 1234-4321</p>
                <br>
                <p>E-mail: pontodigital@gmail.com </p>
            </div>
      </div>
    </footer>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>
        $(function() {
            var nav = $('.menu');
            var botao = $('.botao_menu');
            botao.on('click',function(){
                nav.toggleClass('active');
            });
        });
    </script>
      
      <script>
        var modal = document.getElementById('id01');
        window.onclick = function(event) {
            if (event.target == modal) {
                modal.style.display = "none";
            }
        }
      </script>

</body>
</html>